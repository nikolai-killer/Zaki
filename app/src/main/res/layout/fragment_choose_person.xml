<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:text="@string/ChoosePersonString"
            android:textAppearance="@style/EntryTextStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.195"/>

    <ImageView
            android:layout_width="141dp"
            android:layout_height="151dp"
            android:id="@+id/iceImageChooser"
            android:src="@drawable/ice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/cloudImageChooser"
            app:layout_constraintTop_toTopOf="@+id/cloudImageChooser"
            app:layout_constraintVertical_bias="0.372"
            android:contentDescription="@string/contentDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.155"/>

    <ImageView
            android:layout_width="187dp"
            android:layout_height="198dp"
            android:src="@drawable/cl0ud"
            android:id="@+id/cloudImageChooser"
            app:layout_constraintStart_toEndOf="@+id/iceImageChooser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.358"
            android:contentDescription="@string/contentDescription"/>
</androidx.constraintlayout.widget.ConstraintLayout>