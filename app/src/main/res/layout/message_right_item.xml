<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingStart="2dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bubble_right"
    >
        <TextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/timeTextViewChatItem"
                android:text="@string/placeholderString"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:lineSpacingExtra="4dp"
        />
        <TextView
                android:id="@+id/timeTextViewChatItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/messageTextView"
                android:paddingStart="7dp"
                android:paddingEnd="0dp"
                android:paddingBottom="2dp"
                android:text="@string/placeholderString"
                android:textSize="11sp"
                tools:ignore="SmallSp"/>

        <ImageView
                android:id="@+id/messageRightCheckIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/timeTextViewChatItem"
                app:layout_constraintHorizontal_bias="1"
                android:src="@drawable/check_icon"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:contentDescription="@string/contentDescription"
        />
        <ImageView
                android:id="@+id/messageLeftCheckIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/timeTextViewChatItem"
                android:src="@drawable/check_icon"
                app:layout_constraintHorizontal_bias="1"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="6dp"
                android:visibility="invisible"
                android:contentDescription="@string/contentDescription"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>